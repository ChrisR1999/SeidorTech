<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/HojaTermino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="PasarHojaTermino"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hojaterminocolor" />

            <ImageButton
                android:id="@+id/ContratoReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="ContratoReservas"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hojaterminocolor" />

            <ImageButton
                android:id="@+id/PagoInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="PagoInicial"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hojaterminocolor" />

            <ImageButton
                android:id="@+id/ContratoCiere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="ContratoCierred"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hojaterminocolor" />

            <ImageButton
                android:id="@+id/PagoFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="PagoFinald"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hojaterminocolor" />

            <ImageButton
                android:id="@+id/Membresia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="Membresiad"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/contratosreserva" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="PasarActivity"
                    android:text="Button" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="PagoInicial"
                    android:text="Button" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>